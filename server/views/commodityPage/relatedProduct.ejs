<!-- 相關商品 -->
<section class="container bg-white mt-3">
  <h2 class="pt-3 related text-center"><strong>相關商品</strong></h2>
  <div class="row">
    <% relatedProducts.forEach(function(relatedProduct) { %>
      <div class="col-6 col-md-4 col-lg-3">
        <a id="prodCard-<%= relatedProduct.prod_id %>"
          href="/commodity/<%= relatedProduct.prod_id %>/<%= relatedProduct.spec_id %>">
          <div class="card h-100" >
            <img src="/public/<%= relatedProduct.dir %>/<%= relatedProduct.filename %>" alt="產品圖片"
              class="w-100 rounded" />
            <div class="ps-3">
              <h4 class="mt-3"><b>
                  <%= relatedProduct.prod_name %>
                </b></h4>
              <p>
                <%= relatedProduct.spec_name %>
              </p>
              <div class="priceIcon">
                <span class="mt-lg-4">
                  NT <%= relatedProduct.price %>
                </span>
                <button class="btn btn-lg no-link addtocollect" data-prod_id="<%= relatedProduct.prod_id %>" id="addtocollect"
                  data-spec_id="<%= relatedProduct.spec_id %>">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-heart"
                    viewBox="0 0 16 16">
                    <path
                      d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                  </svg>
                </button>
                <button class="btn btn-lg no-link" data-prod_id="<%= relatedProduct.prod_id %>" id="addtocart"
                  data-spec_id="<%= relatedProduct.spec_id %>">
                  <i class="bi bi-cart-plus"></i>
                </button>
              </div>
            </div>
          </div>
        </a>
      </div>
      <% }) %>
  </div>

  <div class="center mt-5">
    <div class="pagination">
      <% for(var i=1; i <=4; i++) { %>
        <span><a href="/<%= i%>">
            <%= i%>
          </a></span>
        <% } %>
    </div>
  </div>
</section>